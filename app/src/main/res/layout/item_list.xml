<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_list"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:padding="8dp"
        >

        <TextView
            android:id="@+id/tv_judul"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:hint="@string/judul"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/image_list"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_judul"
            android:layout_marginEnd="5dp"
            android:contentDescription="@string/gambar_list"
            android:src="@drawable/baseline_broken_image_24" />


        <TextView
            android:id="@+id/tv_isi"
            android:layout_toEndOf="@id/image_list"
            android:layout_below="@id/tv_judul"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:maxLines="5"
            android:hint="@string/lorem_ipsum"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>